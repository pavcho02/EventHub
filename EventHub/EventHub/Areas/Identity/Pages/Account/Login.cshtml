@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1 class="row1">@ViewData["Title"]</h1>
<section class="row1">
    <section class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <section asp-validation-summary="All" class="text-danger"></section>
                <section class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <section class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </section>
                </section>
                <section class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </section>
                <section class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                    </p>
                </section>
            </form>
        </section>
    </section>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}