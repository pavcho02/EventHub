@using EventHub.Models.ViewModels
@model ICollection<EventReportIndexViewModel>

<section class="container mt-4">
    <h1 class="mb-4">Event Reports</h1>

    <form asp-controller="Reports" asp-action="Index" method="get" class="row g-2 mb-4">
        <div class="col-auto">
            <input type="text" name="Search" class="form-control" placeholder="Search by event title" />
        </div>
        <div class="col-auto">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Event</th>
                <th>Total Reports</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var er in Model)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Reports"
                           asp-action="Details"
                           asp-route-id="@er.EventId">
                            @er.EventTitle
                        </a>
                    </td>
                    <td>@er.reportsCount</td>
                </tr>
            }
        </tbody>
    </table>
</section>
