@using EventHub.Models.ViewModels
@model EventDetailsViewModel;

<section class="container mt-4">
    <section class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Event Details</h1>
        <section>
            <a class="btn btn-primary me-2"
               asp-area="EventOrganizer"
               asp-controller="Events"
               asp-action="Edit"
               asp-route-eventId="@Model.Id">Edit</a>

            <a class="btn btn-danger"
               asp-area="EventOrganizer"
               asp-controller="Events"
               asp-action="Delete"
               asp-route-eventId="@Model.Id">Delete</a>
        </section>
    </section>

    <section class="card shadow-sm">
        <section class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Start Time:</strong> @Model.StartTime.ToString("f")</p>
            <p class="card-text"><strong>Location:</strong> @Model.Location</p>
            <p class="card-text"><strong>Target Audience:</strong> @Model.TargetAudience</p>
            <p class="card-text"><strong>Event Type:</strong> @Model.EventType</p>
        </section>
    </section>

    <section>
        <h3 class="mt-4">Reviews</h3>
        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            <ul class="list-group">
                @foreach (var review in Model.Reviews)
                {
                    <li class="list-group-item">
                        <strong>@review.UserFirstName @review.UserLastName</strong>
                        <p>@review.Comment</p>
                        <p>(@review.Rating/10</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No reviews yet.</p>
        }
    </section>

</section>