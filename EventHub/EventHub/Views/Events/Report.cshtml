@model EventHub.Models.InputModels.EventReportInputModel;
@{
    ViewData["Title"] = "Report an event";
}

<section class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form asp-area="User" asp-controller="Events" asp-action="Report" method="post" class="needs-validation" novalidate>
        <section class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the issue..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </section>

        <button type="submit" class="btn btn-danger">Submit Report</button>
    </form>
</section>